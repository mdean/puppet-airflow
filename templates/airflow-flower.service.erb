[Unit]
Description= Airflow celery flower
Wants=basic.target
After=basic.target network.target

[Service]
EnvironmentFile=/etc/sysconfig/airflow
PIDFile = <%= @run_folder %>/airflow_flower.pid
User=<%= @user %>
Group=<%= @group %>
Type=simple
ExecStart=/bin/airflow flower
KillMode=process
Restart=on-failure
RestartSec=15s

[Install]
WantedBy=multi-user.target
